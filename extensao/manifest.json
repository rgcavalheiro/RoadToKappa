{
  "manifest_version": 3,
  "name": "RoadToKappa - Wiki Redirect",
  "version": "1.0.0",
  "description": "Redireciona links da wiki do Tarkov para o RoadToKappa no GitHub Pages",
  "permissions": [
    "webNavigation"
  ],
  "host_permissions": [
    "https://escapefromtarkov.fandom.com/*",
    "https://rgcavalheiro.github.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

